<div class="modal fade" id="combinedSalesDetailModal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Birleştirilmiş Satış Detayı
                </h5>
            </div>
            <div class="modal-body">
                \{{#if this.startHour}}
                <h5><strong>\{{this.startDate}} \{{this.startHour}}</strong></h5>
                <h5><strong>\{{this.endDate}} \{{this.endHour}}</strong></h5>
                \{{else}}
                <h5><strong>Tüm Satışlar</strong></h5>
                \{{/if}}
                <div class="table-responsive mt-3">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Ürün</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Miktar</th>
                                <th scope="col">Net</th>
                            </tr>
                        </thead>
                        <tbody>

                            \{{#each this.salesList}}
                            <tr>
                                <td>\{{this.product.name}}</td>
                                <td>\{{this.sellPrice}} &#8378</td>
                                <td>\{{this.unit}} \{{this.product.quantity}}</td>
                                <td>\{{this.currentPrice}} &#8378</td>
                            </tr>
                            \{{/each}}
                        </tbody>
                        <tfoot>
                            <th scope="col">Toplam</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col">\{{this.sumPrice}} &#8378</th>
                        </tfoot>
                    </table>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
        </form>
    </div>
</div>
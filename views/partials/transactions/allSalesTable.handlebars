<table id="productList" class="table table-bordered">
    <thead>

        <tr>
            <th style="border-bottom:none;border-top:none">Tarih Aralığı</th>
            <th style="border-bottom:none;border-top:none">Ürünler</th>
            <th style="border-bottom:none;border-top:none">Toplam Fiyat</th>
            <th style="border-bottom:none;border-top:none">İşlemler</th>
        </tr>

    </thead>
    <tbody>
        <tr>
            <td>
                \{{#if this.combinedSales.startHour}}
                \{{this.combinedSales.startHour}} \{{this.combinedSales.startDate}}
                \{{else}}
                Tüm satışlar
                \{{/if}}
                <br>
                \{{#if this.combinedSales.startHour}}
                \{{this.combinedSales.endHour}} \{{this.combinedSales.endDate}}

                \{{/if}}
            </td>
            <td class="py-0">
                \{{#each this.combinedSales.salesList}}
                <small>\{{this.product.name}} - \{{this.unit}} \{{this.product.quantity}}</small><br>
                \{{/each}}
            </td>
            <td>\{{this.combinedSales.sumPrice}} &#8378</td>
            <td class="text-center">
                <button type="button" class="btn btn-primary btn-sm"
                    onclick="getCombinedSalesDetailModal('\{{this.combinedSales.jsonData}}')">
                    Datay
                </button>
            </td>
        </tr>
    </tbody>
</table>

<table id="productList" class="table table-bordered">
    <thead>

        <tr>
            <th style="border-bottom:none;border-top:none">Saat</th>
            <th style="border-bottom:none;border-top:none">Tarih</th>
            <th style="border-bottom:none;border-top:none">Ürünler</th>
            <th style="border-bottom:none;border-top:none">Toplam Fiyat</th>
            <th style="border-bottom:none;border-top:none">İşlemler</th>
        </tr>

    </thead>
    <tbody>
        \{{#each this.data}}
        <tr>
            <td>\{{this.hour}}</td>
            <td>\{{this.date}}</td>
            <td class="py-0">
                \{{#each this.salesList}}
                <small>\{{this.product.name}} - \{{this.unit}} \{{this.product.quantity}}</small><br>
                \{{/each}}
            </td>
            <td>\{{this.sumPrice}} &#8378</td>
            <td class="text-center">
                <button type="button" class="btn btn-danger btn-sm"
                    onclick="removeSalesModal({'id':'\{{this._id}}','date':'\{{this.hour}} \{{this.date}}'})">
                    Satış İptal
                </button>
                <button type="button" class="btn btn-primary btn-sm" onclick="getSalesBySalesIdModal('\{{this._id}}')">
                    Datay
                </button>
            </td>
        </tr>
        \{{/each}}
    </tbody>
</table>